<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_50sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcvMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:backgroundTint="@color/slateColor"
        android:clickable="true"
        android:focusable="true"
        android:alpha="0.8"
        android:minHeight="@dimen/_120sdp"
        android:foreground="@drawable/ripple_light"
        app:cardCornerRadius="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="@dimen/_120sdp">


            <TextView
                android:id="@+id/tvAdCount"
                fontPath="fonts/Montserrat-Bold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:text="1"
                android:textColor="@color/antiqueWhite"
                android:textSize="@dimen/_12ssp"
                tools:ignore="MissingPrefix" />



        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/ivRemove"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:background="@drawable/filled_circle"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_gravity="end"
        android:src="@drawable/ic_close"
        app:tint="@color/mostlyBlack" />

</FrameLayout>